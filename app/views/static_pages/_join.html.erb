<%= form_for :game, :html => {:class => "form-horizontal center"}, :url => { :action => 'join', :controller => 'game'} do |f| %>
  <div class="form-group">
    <%= f.label :id, class: "col-md-4 control-label", style: "text-align: right" %>
    <div class="col-md-8">
      <%= f.text_field :id, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :name, class: "col-md-4 control-label", style: "text-align: right" %>
    <div class="col-md-8">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Join Game", class: "btn btn-default btn-primary" %>
  </div>
<% end %>
