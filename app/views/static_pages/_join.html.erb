<h2>Join an Existing Game</h2>
<%= form_for :game, :url => { :action => 'join', :controller => 'game'} do |f| %>
  <div class="form-group">
    <%= f.label :game_id, class: "control-label" %>
    <%= f.number_field :game_id, class: "form-control", :required => true %>
  </div>

  <div class="form-group">
    <%= f.label :name, class: "control-label" %>
    <%= f.text_field :name, class: "form-control", id: "joinName", :required => true %>
  </div>

  <%= f.submit "Join Game", class: "btn btn-primary" %>
<% end %>
